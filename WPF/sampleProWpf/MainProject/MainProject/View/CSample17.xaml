                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Margin" Value="3"></Setter>
                        <Setter Property="Padding" Value="3"></Setter>
                    </Style>
                </StackPanel.Resources>
                <TextBlock Padding="5" Background="LightGray"> Content above the WrapBreakPanel.
                </TextBlock>
